{
    "$schema": "https://raw.githubusercontent.com/Kitware/CMake/master/Help/manual/presets/schema.json",
    "version": 10,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 31,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "generator",
            "hidden": true,
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++"
            }
        },
        {
            "name": "build-debug",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "build-release",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "debug",
            "inherits": ["generator", "build-debug"],
            "binaryDir": "${sourceDir}/build-debug"
        },
        {
            "name": "release",
            "inherits": ["generator", "build-release"],
            "binaryDir": "${sourceDir}/build-release"
        },
        {
            "name": "unity-debug",
            "inherits": ["generator", "build-debug"],
            "binaryDir": "${sourceDir}/build-unity-debug",
            "cacheVariables": {
                "CMAKE_UNITY_BUILD": {
                    "type": "BOOL",
                    "value": "ON"
                }
            }
        },
        {
            "name": "unity-release",
            "inherits": ["generator", "build-release"],
            "binaryDir": "${sourceDir}/build-unity-release",
            "cacheVariables": {
                "CMAKE_UNITY_BUILD": {
                    "type": "BOOL",
                    "value": "ON"
                }
            }
        }
    ],
    "buildPresets": [
        {
            "name": "debug",
            "configurePreset": "debug"
        },
        {
            "name": "release",
            "configurePreset": "release"
        },
        {
            "name": "unity-debug",
            "configurePreset": "unity-debug"
        },
        {
            "name": "unity-release",
            "configurePreset": "unity-release"
        }
    ]
}
